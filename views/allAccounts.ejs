<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Accounts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #e9ecef;
      margin: 0;
      padding: 0;
      color: #333;
    }

    nav {
      background-color: #2c3e50;
      padding: 15px;
      text-align: center;
    }

    nav a {
      color: #ecf0f1;
      margin: 0 15px;
      text-decoration: none;
      font-weight: bold;
    }

    nav a:hover {
      text-decoration: underline;
    }

    h1 {
      text-align: center;
      margin: 30px 0 10px;
      color: #2c3e50;
    }

    table {
      width: 90%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 15px;
      border: 1px solid #ccc;
      text-align: center;
      font-size: 1rem;
    }

    th {
      background-color: #f7f7f7;
      color: #333;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    .no-data {
      text-align: center;
      margin-top: 30px;
      font-size: 1.2em;
      color: red;
    }

    .download-link {
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
    }

    .download-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <nav>
    <a href="/">All Accounts</a>
    <a href="/addAccount">Add Account</a>
    <a href="/deposit">Deposit</a>
    <a href="/withdraw">Withdraw</a>
  </nav>

  <h1>All Accounts</h1>

  <% if (accountList.length === 0) { %>
    <p class="no-data">No accounts found</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Account Name</th>
          <th>Account ID</th>
          <th>Balance (â‚¹)</th>
          <th>Uploaded File</th>
        </tr>
      </thead>
      <tbody>
        <% accountList.forEach(account => { %>
          <tr>
            <td><%= account.name %></td>
            <td><%= account.id %></td>
            <td><%= account.balance.toFixed(2) %></td>
            <td>
              <% if (account.filePath) { %>
                <a href="/uploads/<%= account.filePath %>" class="download-link" download>
                  Download File
                </a>
              <% } else { %>
                No file uploaded
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
